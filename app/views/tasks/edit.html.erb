<%= render :partial => "shared/navigation" %>

<table border="0" cellpadding="0" cellspacing="0"  id="id-form">
  <%= form_for @task do |f| %>
	<%= render :partial => "form", :locals => { :f => f} %>
	<tr>
	  <th></th>
	  <td>
		<%= f.submit "Update", :class => "form-submit" %>
		<%= link_to "Cancel", tasks_path, :class => "form-cancel" %>
	  </td>
	</tr>
  <% end %>
</table>